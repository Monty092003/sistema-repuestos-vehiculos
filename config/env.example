# Configuración de Entorno - Sistema de Repuestos de Vehículos
# Copiar este archivo como .env y configurar los valores

# Base de datos
DB_HOST=localhost
DB_NAME=repuestos_vehiculos
DB_USER=root
DB_PASS=

# Aplicación
APP_NAME="Sistema de Repuestos de Vehículos"
APP_DEBUG=true
APP_URL=http://localhost/miapp/public/

# Sesiones
SESSION_TIMEOUT=3600

# Archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=storage/uploads/

# Email (para futuras notificaciones)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_NAME="Sistema de Repuestos"
